{
  "mcpServers": {
    "filesystem": {
      "autoApprove": [],
      "disabled": false,
      "timeout": 60,
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--mount",
        "type=bind,src=d:/code/HumanModelGeneration,dst=/projects/HumanModelGeneration",
        "mcp/filesystem",
        "/projects"
      ]
    },
    "tavily": {
        "type": "stdio",
        "command": "bunx",
        "args": [
            "-y",
            "tavily-mcp@latest"
        ],
        "env": {
            "TAVILY_API_KEY": "YOUR_TAVILY_KEY"
        }
    },
    "fetch": {
      "autoApprove": [
        "fetch"
      ],
      "disabled": false,
      "timeout": 60,
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "HTTP_PROXY=http://host.docker.internal:30080",
        "-e",
        "HTTPS_PROXY=http://host.docker.internal:30080",
        "mcp/fetch:latest",
        "--ignore-robots-txt"
      ]
    },
    "context7": {
        "command": "bunx",
        "args": [
            "-y",
            "@upstash/context7-mcp"
        ]
    }
  }
}
